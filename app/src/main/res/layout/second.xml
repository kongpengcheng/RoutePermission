<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" CameraPermission"/>

    <Button
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" phonePermission"/>
    <Button
        android:id="@+id/phone_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" CameraAndPhonePermission"/>
    <Button
        android:id="@+id/no_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Permission not match"/>
    <Button
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" PermissionFragment"/>
</LinearLayout>